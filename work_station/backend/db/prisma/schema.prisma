generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
// enum has to be defined seperately in prisma 
enum Role {
  doc
  staff
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique    
  password String     
  role     Role   @default(staff)
}

model Patient {
  id          Int       @id @default(autoincrement())   // Auto-increment primary key
  patientId   String    @unique                        // Human-readable ID (e.g. PT000042)
  name        String
  age         Int
  gender      String
  phone       String?                                   // Nullable (shared phone allowed)
  address     String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  xRays       XRay[]
}

model XRay {
  id           Int      @id @default(autoincrement())
  xrayId       String   @unique                        // Human-readable ID for X-ray (e.g. XR000123)
  filePath     String                                 // Path to original X-ray image
  analyzedPath String?                                // Path to analyzed X-ray image
  patient      Patient  @relation(fields: [patientId], references: [id])
  patientId    Int
  createdAt    DateTime @default(now())
}
